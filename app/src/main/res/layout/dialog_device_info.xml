<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <TextView
                android:layout_height="wrap_content"
                android:id="@+id/textView_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

        <com.google.android.material.button.MaterialButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/baseline_star_outline_24"
                android:id="@+id/btn_toggleStar"
                android:layout_marginStart="10dp"
                app:iconPadding="0dp"
                android:padding="0dp"
                app:iconGravity="textStart"
                android:contentDescription="@string/btn_star_description"
                app:iconTint="@color/star" />

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_deviceDescription" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="@string/btn_navigate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_navigate"
                android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@android:drawable/ic_menu_share"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:layout_marginStart="10dp"
                app:iconGravity="textStart"
                android:id="@+id/btn_share"
                android:contentDescription="@string/btn_share" />
    </LinearLayout>

</LinearLayout>
